@model Final_Project.Models.Ad

@{

    ViewData["Title"] = "Make a New Ad";
    bool iscreate;
    if (ViewBag.request == "CreateAd")
    {
        iscreate = true;
    }else
    {
        iscreate = false;
    }

}
@if (iscreate)
{
 <h1 class="text-center">Make a New Ad</h1>
   
}else
{
    <h1 class="text-center">Edit Ad</h1>
 
}

<h4 class="text-center">Ad's Details</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="@ViewBag.request"  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (!iscreate)
                  {
                <div class="form-group">
                    <label asp-for="AdId" class="control-label"></label>
                    <input value="@Model.AdId" name="AdId" readonly class="form-control" />
                    <span asp-validation-for="AdId" class="text-danger"></span>
                </div>  
                  }
                <div class="form-group">
                    <label asp-for="AdTitle" class="control-label"></label>
                    <input asp-for="AdTitle" class="form-control" />
                    <span asp-validation-for="AdTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdBrief" class="control-label"></label>
                    <input asp-for="AdBrief" class="form-control"  />
                    <span asp-validation-for="AdBrief" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdDescription" class="control-label"></label>
                    <textarea style="resize:none;" asp-for="AdDescription" class="form-control"  rows="5" required></textarea>
                    <span asp-validation-for="AdDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdPrice" class="control-label"></label>
                    <input  asp-for="AdPrice" class="form-control" />
                    <span asp-validation-for="AdPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="" class="control-label"></label>
                    <input required type="file" name="img1" accept="image/*" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                <div style="display:none" id="spinner" class="spinner-border text-warning" role="status"></div>
            
                <div class="form-group">
                    <label asp-for="BrandId" class="control-label"></label>
                    <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.brands" ></select>
                </div>

                <input asp-for="SellerId" type="hidden" />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @*<a asp-action="Index">Back to List</a>*@
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/AddAd/addadjs.js"></script>
    }
