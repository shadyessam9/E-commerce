<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Molla - Bootstrap eCommerce Template</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Molla - Bootstrap eCommerce Template">
    <meta name="author" content="p-themes">
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="assets/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/images/icons/favicon-16x16.png">
    <link rel="manifest" href="assets/images/icons/site.html">
    <link rel="mask-icon" href="assets/images/icons/safari-pinned-tab.svg" color="#666666">
    <link rel="shortcut icon" href="assets/images/icons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="Molla">
    <meta name="application-name" content="Molla">
    <meta name="msapplication-TileColor" content="#cc9966">
    <meta name="msapplication-config" content="assets/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

</head>

<body>
    <div class="page-wrapper">
   
        <main class="main">
        	

            <div class="page-content">
            	<div class="container">
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								<th>Product</th>
								<th>Price</th>
								<th>Remove</th>

							</tr>
						</thead>

						<tbody>
                            @foreach(var item in Model)
                            {
                                
                            
                            <tr>
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="/ads?AdId=@item._Ad.AdId">
												<img src=@item._Ad.AdMainImage alt="Product image">
											</a>
										</figure>

										<h3 class="product-title">
											<a href="/ads?AdId=@item._Ad.AdId">@item._Ad.AdTitle</a>
										</h3><!-- End .product-title -->
									</div><!-- End .product -->
								</td>
								<td class="price-col">$ @item._Ad.AdPrice</td>
							<!-- 	<td class="stock-col"><span class="in-stock">Actions</span></td>-->
								
								 <td class="remove-col"><a asp-action="RemoveFromFavourit" asp-route-page="@ViewBag.currentPage" asp-route-id="@item.AdtId" class="btn-remove"><i class="icon-close"></i></a></td>
							</tr>
                            }
						</tbody>
					</table><!-- End .table table-wishlist -->
	            	
            	</div><!-- End .container -->
            </div><!-- End .page-content -->


              
<div class="col-md-12">
    <nav aria-label="Page navigation">
        <ul class="pagination d-flex flex-wrap justify-content-center">
            @{
                string prevState = "disabled";
                string nextState = "disabled";
                if (ViewBag.currentPage > 1)
                {
                    prevState = "active";
                }

                if (ViewBag.currentPage < ViewBag.Allpages)
                {
                    nextState = "active";
                }
            }

            @*PREV BUTTON !!!!!!!!!!!!!!!!!!*@
            @*PREV BUTTON !!!!!!!!!!!!!!!!!!*@
            @*PREV BUTTON !!!!!!!!!!!!!!!!!!*@
          

                <li class="page-item @prevState ">
                    <a class="page-link page-link-prev"
                   aria-label="Previous"
                   tabindex="-1"
                   aria-disabled="true"
                   asp-controller="wishlist"
                   asp-action="Index"
 asp-route-page="@(ViewBag.currentPage-1)">
                        <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                    </a>
                </li>

          

            @if (ViewBag.Allpages != null)
            {

                @for (var i = 1; i <= ViewBag.Allpages; i++)
                {
                  

                        if (i == @ViewBag.currentPage)
                        {


                            <li class="page-item active" aria-current="page">
                                <a class="page-link"
                asp-controller="wishlist"
                   asp-action="Index"
  asp-route-page="@i">@i</a>
                            </li>
                        }

                        else
                        {
                            <li class="page-item" aria-current="page">
                                <a class="page-link"
                 asp-controller="wishlist"
                   asp-action="Index"
 asp-route-page="@i">@i</a>
                            </li>
                        }
                    }
             



            }
            <li class="page-item-total">of @ViewBag.Allpages</li>







            @*NEXT BUTTON!!!!!!!!!!!!!!!!!!!!!!!*@
            @*NEXT BUTTON!!!!!!!!!!!!!!!!!!!!!!!*@
           
                <li class="page-item @nextState">
                    <a class="page-link page-link-next" aria-label="Next"
                  asp-controller="wishlist"
                   asp-action="Index"
asp-route-page="@(ViewBag.currentPage+1)">
                        Next <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                    </a>
                </li>

          
           

        </ul>
    </nav>  <!-- ad list page navigation -->
</div>

        </main><!-- End .main -->

      
    </div><!-- End .page-wrapper -->

   
